<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<ImageView android:id="@+id/roster_icon"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
		android:layout_marginRight="4sp" android:longClickable="false"
		android:paddingLeft="15sp" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:minHeight="50sp" android:layout_gravity="bottom">

		<TextView android:id="@+id/roster_screenname"
			android:paddingLeft="10sp" android:longClickable="false"
			android:textSize="25sp" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:singleLine="true" />

		<TextView android:id="@+id/roster_statusmsg"
			android:textStyle="italic" android:paddingLeft="10sp"
			android:textSize="16sp" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:singleLine="true"
			android:ellipsize="end" android:visibility="gone" />

	</LinearLayout>
</LinearLayout>
